  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "useTabs": false,
  "jsxSingleQuote": false,
  "arrowParens": "always",
  "overrides": [
    {
      "files": "src/**",
